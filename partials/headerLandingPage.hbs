<!-- header for the main page: home.hbs -->
<header class="landing-page layout-transparent mdl-layout mdl-js-layout" {{#if @blog.cover}} style="background-image: url({{@blog.cover}});" {{else}} style="background-image: url('{{asset "images/cover.jpg"}}');" {{/if}}>
    <!-- navigation menu if available -->
    {{#if @blog.navigation}}
        {{navigation}}
    {{/if}}
    <div class="portfolio-max-width">
        <div class="logo-container">
            <a href="{{@blog.url}}" title="{{@blog.title}}">
                <h1>
                    <div class="place4logo large"></div>
                    <div class="place4logo small small-screen-only"></div>
                </h1>
            </a>
        </div>
        <div class="title-container">
            <div class="place4welcome"></div>
        </div>
    </div>
</header>
