<div id="contact" class="portfolio-full-width">
    {{#foreach posts}}
        {{#has tag="contact"}}
            <div class="mdl-cell mdl-card mdl-shadow--0dp portfolio-card">
                <a href="{{url}}">
                    <div class="mdl-card__title"  {{#if image}} style="background-image: url({{image}});" {{/if}}>
                      <h2 class="mdl-card__title-text">{{title}}</h2>
                    </div>

                    <div class="mdl-card__supporting-text">
                        {{excerpt words="6"}}
                    </div>
                </a>
            <!--
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="{{url}}">Weiterlesen</a>
                </div>
            -->
                <div class="mdl-card__menu">
                  <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                    <i class="material-icons">share</i>
                  </button>
                </div>
            </div>
        {{/has}}
    {{/foreach}}
</div>
