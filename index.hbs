{{!< default}}

{{! The main content area on the homepage }}

<div id="fullpage">
    {{! section0: this is the start page: intro}}
    <div class="section" id="section0">
        <div class="intro">
            <img src="{{@blog.cover}}" alt="{{@blog.title}} | {{@blog.description}}" class="coverlogo" />
        </div>
    </div>

    {{! section1: new products}}
    <div class="section" id="section1">
        {{! Each post will be output using this markup }}
        {{#foreach posts}}
            {{#has tag="product"}} {{! only post with the tag "product" }}
                {{!> post}}
                <div class="slide" id="slide1">
                    <div class="intro">
                        <h2>
                            <a href="{{url}}" class="post__link post__title_link"><span>{{{title}}}</span></a>
                        </h2>
                        {{#if image}}
                            <img src="{{image}}" alt="{{{title}}}" class="post__image_to_load" />
                        {{/if}}
                        <p class="post__excerpt">
                            <a href="{{url}}" class="post__link post__readmore">{{excerpt characters="111"}}&hellip;</a>
                        </p>
                    </div>
                </div>
            {{/has}}
        {{/foreach}}
    </div>

    {{! section2: upCycling and reDesign}}
    <div class="section" id="section2">
        {{! Each post will be output using this markup }}
        {{#foreach posts}}
            {{#has tag="upcard"}} {{! only post with the tag "upcard" = upCycling and reDesign}}
                {{!> post}}
                <div class="slide" id="slide1">
                    <div class="intro">
                        <h2>
                            <a href="{{url}}" class="post__link post__title_link"><span>{{{title}}}</span></a>
                        </h2>
                        {{#if image}}
                            <img src="{{image}}" alt="{{{title}}}" class="post__image_to_load" />
                        {{/if}}
                        <p class="post__excerpt">
                            <a href="{{url}}" class="post__link post__readmore">{{excerpt characters="111"}}&hellip;</a>
                        </p>
                    </div>
                </div>
            {{/has}}
        {{/foreach}}
    </div>

    {{! section3: computational stuff}}
    <div class="section " id="section3">
        {{! Each post will be output using this markup }}
        {{#foreach posts}}
            {{#has tag="cs"}} {{! only post with the tag "cs" = computational stuff }}
                {{!> post}}
                <div class="slide" id="slide1">
                    <div class="intro">
                        <h2>
                            <a href="{{url}}" class="post__link post__title_link"><span>{{{title}}}</span></a>
                        </h2>
                        {{#if image}}
                            <img src="{{image}}" alt="{{{title}}}" class="post__image_to_load" />
                        {{/if}}
                        <p class="post__excerpt">
                            <a href="{{url}}" class="post__link post__readmore">{{excerpt characters="111"}}&hellip;</a>
                        </p>
                    </div>
                </div>
            {{/has}}
        {{/foreach}}
    </div>

    {{! secttion4: manufactory incl. about us and contact}}
    <div class="section " id="section4">
        <div class="intro">
            <div class="about">
                leer
            </div>
        </div>
    </div>

</div>
